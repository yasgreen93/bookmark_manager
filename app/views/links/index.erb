<h1> Welcome! <% if current_user %> <%= current_user.address %> <% end %> </h1>

<h1> Links </h1>

<form action='/links/new'>
  <input type='submit' value='Add link'>
</form>

<h3>Filter by tags <%= @tags %></h3>
<form action='/tags' method='post'>
  <input type='text' name='tags' placeholder="tags">
  <input type='submit' value='Filter'>
</form>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title:  <%= link.title %>
      URL:    <%= link.url %>
      Tag:    <%= @string = ""
                  (link.tags).each do |tag|
                  @string << tag.name + ", "
                  end
                  @string %>
    </li>
  <% end %>
</ul>
