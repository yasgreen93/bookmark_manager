<h1><% if current_user %>
      Welcome! <%= current_user.address %>
      <form method='post' action='/sessions'>
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Sign out'>
      </form>
    <% end %>
</h1>
<% if flash[:notice] %>
  <div id='notice'>
    <%= flash[:notice] %>
  </div>
<% end %>

<h1> Links </h1>

<form action='/links/new'>
  <input type='submit' value='Add link'>
</form>

<h3>Filter by tags <%= @tags %></h3>
<form action='/tags' method='post'>
  <input type='text' name='tags' placeholder="tags">
  <input type='submit' value='Filter'>
</form>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title:  <%= link.title %>
      URL:    <%= link.url %>
      Tag:    <%= @string = ""
                  (link.tags).each do |tag|
                  @string << tag.name + ", "
                  end
                  @string %>
    </li>
  <% end %>
</ul>
